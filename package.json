{
  "name": "vibearch",
  "version": "1.0.0",
  "private": true,
  "description": "Arch â€” AI-Native System Design Whiteboard",
  "scripts": {
    "dev": "concurrently --kill-others --names \"frontend,backend\" --prefix-colors \"cyan,yellow\" \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && source .venv/bin/activate && uvicorn app.main:app --reload --port 8000",
    "build": "cd frontend && npm run build",
    "typecheck": "cd frontend && npx tsc --noEmit"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
